@model AssessmentFrontEnd.Models.DocumentVM
@{
    ViewData["Title"] = "Upload a document";
}
<br />
<br />
<div class="container" id="UploadDocument">
    <!-- Inputs -->
    <h3 >Upload a document</h3>
    <hr>
    <form method="post" asp-controller="Document" asp-action="upload" enctype="multipart/form-data">
        <div class="row mt-5">
            <div class="col-md-12">
                <div asp-validation-summary="All" style="color:red"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" placeholder="Document name" >
                    <br />
                    
                </div>
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input type="datetime-local"  class="form-control">
                    <br />
                   
                </div>
                    
                <div class="form-group">
                    <label asp-for="Priority"></label>
                    <select class="form-control"  >

                        <option disabled selected value="0">choose a priority</option>

                        <option value="1">Low</option>
                        <option value="2">critecal</option>
                        <option value="1">high</option>
                        
                    </select>
                    <br />
                   
                </div>
                <div class="form-group">
                    <label ></label>
                    <input type="datetime-local"  class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="DocumentFiles"></label>
                    <input type="file" multiple  class="form-control form-control-lg"  />
                    <br />
               
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Upload" style="float:right"/>
                </div>
            </div>
         
        </div> <!-- end of inputs -->
    </form>
</div>
@section _ValidationScript
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 }