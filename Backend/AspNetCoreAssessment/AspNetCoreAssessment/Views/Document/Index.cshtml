@model AspNetCoreAssessment.Models.DocumentVM
@{
    ViewData["Title"] = "Available documents";
}
<link href="/lib/datatables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<br />
<br />
<div class="container" >
<!-- Inputs -->
    <h3 id="AvalableDocs">Available documents</h3>
    @if (ViewBag.Msg != null)
    {
        <div class="alert alert-primary alert-dismissible fade show" role="alert" >
        @if (ViewBag.Msg == "NoDocument")
        {
                <p>Please select a document to see its information</p>

            }
            else if (ViewBag.Msg == "DeletedSuccessfuly")
            {
                <p>The document Information and folder were Deleted successfuly</p>

            }else if (ViewBag.Msg == "UpdatedSuccessfuly")
            {
                <p>Document information Updated successfuly</p>
            }

       
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }
<hr>
    <div class="row">
        <div class="col-sm-12 margin-bottom30">
            <table id="DocumentList" class="table table-striped table-bordered dt-responsive nowrap">
                <thead>
                    <tr>
                        <th>Document Name</th>
                        <th>Uploaded date</th>
                        <th>Date</th>
                        <th>Priority</th>
                        <th>Due Date</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>delete</th>
                    </tr>

                </thead>
            </table>
        </div><!--services col-->

    </div>
</div>
@section _DocumenDatatable
    {
    <script src="/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript" src="/js/DocumentsDatatable.js"></script>

    
        }

