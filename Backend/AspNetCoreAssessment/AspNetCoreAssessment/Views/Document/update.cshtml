@model AspNetCoreAssessment.Models.DocumentVM

@{
    ViewData["Title"] = "Update Document";
}



<br />
<br />
<div class="container" id="UploadDocument">
    <!-- Inputs -->
    <h3>Upload a document</h3>
    <hr>
    <form method="post" asp-controller="Document" asp-action="update">
        <input type="hidden" asp-for="DocumentId"/>
        <input type="hidden" asp-for="Created" />

        <div class="row mt-5">
            <div class="col-md-12">
                <div asp-validation-summary="All" style="color:red"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Document name">
                    <br />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input type="datetime-local" asp-for="Date" class="form-control">
                    <br />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Priority"></label>
                    <select class="form-control" asp-for="Priority">

                        <option disabled selected value="0">choose a priority</option>
                        @foreach (var item in ViewBag.PrioritiesSelectList)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }


                    </select>
                    <br />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DueDate"></label>
                    <input type="datetime-local" asp-for="DueDate" class="form-control">
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Update Information" style="float:right" />
                </div>
            </div>

        </div> <!-- end of inputs -->
    </form>
</div>
@section _ValidationScript
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 }